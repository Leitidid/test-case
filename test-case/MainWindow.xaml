<Window x:Class="test_case.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_case"
        mc:Ignorable="d"
        Title="MainWindow" Height="210" Width="418">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Введите пятизначное число:" />
            <TextBox x:Name="InputTextBox" TextChanged="InputTextBox_TextChanged" />
            <Label Content="Перевернутое число:" />
            <TextBlock x:Name="OutputTextBlock" />
            <Button Content="Перевернуть" Click="ReverseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
